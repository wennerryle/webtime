{
  "version": "0.0.4",
  "type": "module",
  "scripts": {
    "install:go": "cd server && go mod tidy",
    "install:extension": "cd extension && pnpm i",
    "install": "concurrently \"npm run install:go\" \"npm run install:extension\"",
    "dev:go": "cd server && go run . serve",
    "dev:extension": "cd extension && pnpm run dev",
    "dev": "concurrently \"npm run dev:go\" \"npm run dev:extension\"",
    "build": "node ./build_artefact.js"
  },
  "devDependencies": {
    "@goreleaser/goreleaser": "^2.11.2",
    "concurrently": "^9.2.1",
    "zx": "^8.8.1"
  }
}
